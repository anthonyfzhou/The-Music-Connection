<div class="row title">
  <h1>Parent & Student Form</h1>
</div>

<form method='POST', action='/forms/tutor_next_q'>
  <div class="tab">
    <div class="form-group">
      <label for="name">Parent Name</label>
      <input type="text" name="question[name]" class="form-control" placeholder="ex. First Middle Last" required>
      <small class="form-text text-muted">Please enter your full name here!</small>
    </div>
    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input type="tel" name="question[phone]" class="form-control" placeholder="ex. 000-000-0000">
      <small class="form-text text-muted">Please enter your phone number here!</small>
    </div>
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" name="question[email]" class="form-control" placeholder="ex. TMC@gmail.com" required>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" name="question[address]" class="form-control" placeholder="123 Street, Berkeley CA 12345">
    </div>
  </div>
  <div class="tab">
    <div class="form-group">
      <label for="piano">Home Piano?</label>
      <select class="form-control" name="question[piano]">
        <option>No</option>
        <option>Yes</option>
      </select>
      <small class="form-text text-muted">Select "Yes" if you own a piano at home.</small>
    </div>
  </div>
  <div class="tab">
    <div class="form-group">
      <label for="name">Student Name</label>
      <input type="text" name="question[student]" class="form-control" placeholder="ex. First Middle Last" required>
      <small class="form-text text-muted">Please enter your full name here!</small>
    </div>
    <div class="form-group">
      <label for="grade">Grade Level select</label>
      <select class="form-control" name="question[grade]">
        <option>9</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
      </select>
    </div>
    <div class="tab">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="question[instrument]" value="option1" checked>
        <label class="form-check-label" for="instrument">
        Piano
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="question[instrument]" value="option2">
        <label class="form-check-label" for="instrument">
        Second default radio
        </label>
      </div>
      <div class="form-check disabled">
        <input class="form-check-input" type="radio" name="question[instrument]" value="option3">
        <label class="form-check-label" for="instrument">
        Disabled radio
        </label>
      </div>
    </div>
    <div class="tab">
      <div class="form-group">
        <label for="extra">Experiences</label>
        <input type="text" name="question[exp]" class="form-control" placeholder="ex. Dead Musician's Society">
        <small class="form-text text-muted">If you have any involvement with other musical group, please write them down here!</small>
      </div>
    </div>
    <div class="tab">
      <div class="form-group">
        <label for="pastapp">Applied to TMC before?</label>
        <select class="form-control" name="question[pastapp]">
          <option>No</option>
          <option>Yes</option>
        </select>
      </div>
    </div>
    <div class="tab">
      <div class="form-group">
        <label for="lunch">Do you qualify for free/reduced lunch?</label>
        <select class="form-control" name="question[lunch]">
          <option>No</option>
          <option>Yes</option>
        </select>
      </div>
    </div>
    
    
    <div class="form-group">
      <label for="extra">Time Availabilities</label><br>
      <input type="datetime-local" name="question[time]">
      <small class="form-text text-muted">Please enter your time availability!</small>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">I am a robot.</label>
    </div>
  </div>
  
  <button type="button" id="prev_btn" class="btn btn-primary">Prev</button>
  <button type="button" id="next_btn" class="btn btn-primary">Next</button>
  <button type="submit" id="sub_btn" class="btn btn-primary">Submit</button>
</form>

<%= javascript_include_tag('forms.js') %>