<div class="row title">
  <p class="h2">Tutor's Form</p>
</div>

<form method='POST', action='/forms/tutor_next_q'>
    <div class="form-group">
      <label for="question[name]">Name</label>
      <input type="text" name="question[name]" class="form-control" placeholder="ex. First Middle Last" required>
      <small class="form-text text-muted">Please enter your full name here!</small>
    </div>
    <div class="form-group">
      <label for="question[email]">Email address</label>
      <input type="email" name="question[email]" class="form-control" placeholder="ex. TMC@gmail.com" required>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div><div class="form-group">
      <label for="question[sid]">SID</label>
      <input type="text" name="question[sid]" class="form-control" placeholder="ex. 3032179600">
      <small class="form-text text-muted">Please enter your SID here!</small>
    </div>
    <div class="form-group">
      <label for="question[phone]">Phone Number</label>
      <input type="tel" name="question[phone]" class="form-control" placeholder="ex. 000-000-0000">
      <small class="form-text text-muted">Please enter your phone number here!</small>
    </div>
    <div class="form-group">
      <label for="question[year]">Year</label>
      <input type="text" name="question[year]" class="form-control" placeholder="ex. Sophomore, Junior">
      <small class="form-text text-muted">Please enter your year here!</small>
    </div>
    <div class="form-group">
      <label for="question[major]">Major</label>
      <input type="text" name="question[major]" class="form-control" placeholder="ex. Music, Art History">
      <small class="form-text text-muted">Please enter your major(s) here!</small>
    </div>
    <div class="form-group">
      <label for="question[minor]">Minor</label>
      <input type="text" name="question[minor]" class="form-control" placeholder="ex. Music, Art History">
      <small class="form-text text-muted">Please enter your minor(s) here!</small>
    </div>

    <div class="form-group">
      <label for="question[exp]">Experiences</label>
      <input type="text" name="question[exp]" class="form-control" placeholder="ex. Dead Musician's Society">
      <small class="form-text text-muted">If you have any involvement with other musical group, please write them down here!</small>
    </div>
    <div class="form-group">
      <label for="extra">Time Availabilities</label><br>
      <!-- <input type="datetime-local" name="question[time]"> -->
      <input type="checkbox" name="question[time0]" value="0">      Mondays 3PM ~ 4PM  <br>
      <input type="checkbox" name="question[time1]" value="1">      Tuesdays 5PM ~ 6PM <br>
      <input type="checkbox" name="question[time2]" value="2">      Fridays 4PM ~ 5PM <br>
      <small class="form-text text-muted">Please enter your time availability!</small>
    </div>



  <!-- <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">I am a robot.</label>
  </div> -->
  <button type="button" id="prev_btn" class="btn btn-primary">Prev</button>
  <button type="button" id="next_btn" class="btn btn-primary">Next</button>
  <button type="submit" id="sub_btn" class="btn btn-primary">Submit</button>
</form>

